<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fragment_padding"
        android:layout_gravity="center" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/fragment_image_width"
                android:layout_height="@dimen/fragment_image_height"
                android:layout_marginTop="@dimen/fragment_margin_top"
                android:layout_marginBottom="@dimen/fragment_margin_bottom"
                android:layout_gravity="center" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fragment_text_size"
                    android:textStyle="bold"
                    android:autoLink="web" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>